<% semantic_form_for :report_provider, ReportProvider.new, :url => 'report_providers' do |form| %>
	<%= form.inputs %>
	<%= form.buttons %>
<% end %>
<div>
	<% report_provider_counter = 0 -%>
	<% @report_providers.each do | report_provider | -%>
    	<div>
        	<span class='image_links'>
        		<%= link_to(image_tag('/images/delete-icon-transparent.png'), "javascript:deleteReportProvider('" + report_provider.id.to_s + "');", {:style => "float:right;"}) %>
          	</span>
          	<%= render :partial => 'shared/edit_object_field', :locals => {:object => report_provider, :field => 'name', :redraw => 'report_providers', :counter => report_provider_counter} %>
      	</div>
		<% report_provider_counter += 1 -%>
	<% end -%>
</div>
<script>
  function deleteReportProvider(id)
  {
      new Ajax.Request('/diagnostics_content_editor/delete_report_provider?id=' + id);
  }
</script>