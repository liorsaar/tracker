<div>
	<%= error_messages_for('unit_of_measure', :object => @unit_of_measure) %>
	<% semantic_form_for :unit_of_measure, UnitOfMeasure.new, :url => 'units_of_measure' do |form| %>
		<%= form.inputs %>
		<%= form.buttons %>
	<% end %>
</div>
<div>
	<% unit_of_measure_counter = 0 -%>
  	<% @units_of_measure.each do | unit_of_measure | -%>
    	<div>
        	<span class='image_links'>
        		<%= link_to(image_tag('/images/delete-icon-transparent.png'), "javascript:deleteUnitOfMeasure('" + unit_of_measure.id.to_s + "');", {:style => "float:right;"}) %>
          	</span>
          	<%= render :partial => 'shared/edit_object_field', :locals => {:object => unit_of_measure, :field => 'name', :redraw => 'units_of_measure', :counter => unit_of_measure_counter} %>
      	</div>
		<% unit_of_measure_counter += 1 -%>
	<% end -%>
</div>
<script>
  function deleteUnitOfMeasure(id)
  {
      new Ajax.Request('/diagnostics_content_editor/delete_unit_of_measure?id=' + id);
  }
</script>